<?xml version='1.0' encoding='utf-8'?>
<widget id="edu.ifc.caesGuia" version="0.0.5" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>IFC Cães Guia</name>
    <description>
        Aplicativo para coleta e armazenamento de trajetórias aplicado ao processo de soalização de cães-guia do IFC - Camboriú.
    </description>
    <author email="frantz.miguel@gmail.com" href="http://ifc-camboriu.edu.br">
        GEATI
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="android">
        <preference name="android-minSdkVersion" value="16" />
         <preference name="android-targetSdkVersion" value="23"/>
    </platform>
    <preference name="AutoHideSplashScreen" value="false" />
    <icon src="www/img/icon.png" />
    <plugin name="cordova-plugin-mauron85-background-geolocation" spec="~2.2.4" />
</widget>
